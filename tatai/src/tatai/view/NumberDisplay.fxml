               <children>
                  <Label fx:id="_questionLbl" alignment="CENTER" prefHeight="20.0" prefWidth="150" text="Question number: 1">
                     <font>
                        <Font name="Berlin Sans FB" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="_scoreLbl" alignment="CENTER" prefHeight="20.0" prefWidth="127.0" text="Score: 0">
                     <font>
                        <Font name="Berlin Sans FB" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Label fx:id="_levelLbl" alignment="CENTER" minHeight="90.0" prefHeight="90.0" prefWidth="350.0" text="Level: " VBox.vgrow="ALWAYS">
               <font>
                  <Font name="Berlin Sans FB" size="40.0" />
               </font>
            </Label>
            <Label fx:id="_equationLbl" alignment="CENTER" prefHeight="165.0" prefWidth="300.0" text="9">
               <font>
                  <Font name="Berlin Sans FB" size="96.0" />
               </font>
            </Label>
            <Label fx:id="_answerLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="39.0" prefWidth="320.0" text="You have said:">
