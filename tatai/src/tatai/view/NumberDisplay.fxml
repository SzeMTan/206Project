                  <Button id="start-butto" fx:id="_playBtn" mnemonicParsing="false" onAction="#playClick" prefHeight="43.0" prefWidth="109.0" text="Play">
                     <font>
                        <Font name="Berlin Sans FB" size="25.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <Button id="small-button" alignment="CENTER" contentDisplay="CENTER" layoutX="25.0" layoutY="25.0" mnemonicParsing="false" prefHeight="39.0" prefWidth="104.0" text="Help" textAlignment="CENTER" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" />
      <Button id="small-button" fx:id="_backBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="25.0" layoutY="455.0" mnemonicParsing="false" onAction="#homeClick" prefHeight="39.0" prefWidth="104.0" text="Home" textAlignment="CENTER" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="15.0" />
      <Button id="start-button" fx:id="_recordBtn" alignment="CENTER" layoutX="223.0" layoutY="345.0" mnemonicParsing="false" onMousePressed="#recordPressed" onMouseReleased="#recordReleased" prefHeight="76.0" prefWidth="170.0" text="Record">
