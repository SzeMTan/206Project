<AnchorPane style="-fx-background-color: #84e1e0;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tatai.view.TataiOverviewController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="500.0">
         <top>
            <Label text="Tatai" BorderPane.alignment="BOTTOM_CENTER">
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
               <font>
                  <Font name="Berlin Sans FB" size="60.0" />
               </font>
            </Label>
         </top>
         <bottom>
            <Button mnemonicParsing="false" onAction="#statisticsButtonClicked" prefHeight="90.0" prefWidth="149.0" text="Statistics" BorderPane.alignment="TOP_CENTER">
               <font>
                  <Font name="Berlin Sans FB" size="25.0" />
               </font>
               <effect>
                  <InnerShadow />
               </effect>
            </Button>
         </bottom>
         <padding>
            <Insets bottom="20.0" />
         </padding>
         <center>
            <GridPane prefHeight="209.0" prefWidth="500.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="47.0" minHeight="10.0" prefHeight="47.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="162.0" minHeight="10.0" prefHeight="142.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="76.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button mnemonicParsing="false" onAction="#hardButtonClicked" prefHeight="120.0" prefWidth="170.0" text="1-99" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                     <font>
                        <Font name="Berlin Sans FB" size="40.0" />
                     </font>
                     <effect>
                        <InnerShadow />
                     </effect>
                  </Button>
                  <Button fx:id="easyButton" mnemonicParsing="false" onAction="#easyButtonClicked" prefHeight="120.0" prefWidth="170.0" text="1-9" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                     <font>
                        <Font name="Berlin Sans FB" size="40.0" />
                     </font>
                     <effect>
                        <InnerShadow />
                     </effect>
                  </Button>
                  <Label text="Easy" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
                     <font>
                        <Font name="Berlin Sans FB" size="25.0" />
                     </font>
                  </Label>
                  <Label text="Hard" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
                     <font>
                        <Font name="Berlin Sans FB" size="25.0" />
                     </font>
                  </Label>
               </children>
            </GridPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
