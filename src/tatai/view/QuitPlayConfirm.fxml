<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane stylesheets="@popupDesign.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tatai.view.QuitPlayConfirmController">
   <children>
      <Label layoutX="39.0" layoutY="30.0" text="Are you sure you want to leave? " />
      <Label layoutX="16.0" layoutY="64.0" text="(your progress and scrore will be deleted)" />
      <HBox layoutX="26.0" layoutY="86.0" prefHeight="100.0" prefWidth="200.0">
         <children>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Button fx:id="_yesBtn" mnemonicParsing="false" text="Yes" />
               </children>
            </StackPane>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Button fx:id="_noBtn" mnemonicParsing="false" text="No" />
               </children>
            </StackPane>
         </children>
      </HBox>
   </children>
</AnchorPane>
