<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="_backgroundPane" stylesheets="@Design.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tatai.view.NumberDisplayController">
   <children>
      <Button id="help-button" alignment="CENTER" contentDisplay="CENTER" minWidth="110.0" mnemonicParsing="false" onAction="#menuButtonClicked" prefHeight="39.0" prefWidth="104.0" text="Main Menu" textAlignment="CENTER" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" />
      <VBox prefHeight="200.0" prefWidth="132.0" spacing="5.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="10.0">
         <children>
            <StackPane prefHeight="100.0" prefWidth="162.0">
               <children>
                  <Label fx:id="_label" alignment="CENTER" minHeight="91.0" prefHeight="91.0" prefWidth="260.0" text="Level: ">
                     <font>
                        <Font name="Berlin Sans FB" size="30.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
            <StackPane prefHeight="100.0" prefWidth="162.0">
               <children>
                  <Label fx:id="_numberLbl" alignment="CENTER" prefHeight="170.0" prefWidth="300.0" text="9">
                     <font>
                        <Font name="Berlin Sans FB" size="96.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>
            <StackPane layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="162.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="35.0">
                     <children>
                        <Button fx:id="_okBtn" mnemonicParsing="false" onAction="#okBtnClicked" prefHeight="43.0" prefWidth="109.0" text="Next">
                           <font>
                              <Font name="Berlin Sans FB" size="25.0" />
                           </font>
                        </Button>
                        <Button id="start-butto" fx:id="_playBtn" mnemonicParsing="false" onAction="#playBtnClicked" prefHeight="43.0" prefWidth="109.0" text="Play">
                           <font>
                              <Font name="Berlin Sans FB" size="25.0" />
                           </font>
                        </Button>
                     </children>
                  </HBox>
                  <Button id="start-button" fx:id="_recordBtn" alignment="CENTER" mnemonicParsing="false" onAction="#recordClicked" prefHeight="76.0" prefWidth="170.0" text="Record">
                     <font>
                        <Font name="Berlin Sans FB" size="30.0" />
                     </font>
                  </Button>
               </children>
            </StackPane>
         </children>
      </VBox>
      <Label fx:id="_questionLbl" alignment="CENTER" prefHeight="20.0" prefWidth="150" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0">
         <font>
            <Font name="Berlin Sans FB" size="14.0" />
         </font>
      </Label>
      <Label fx:id="_scoreLbl" alignment="CENTER" prefHeight="20.0" prefWidth="127.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <font>
            <Font name="Berlin Sans FB" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
