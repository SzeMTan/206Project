<AnchorPane fx:id="_backgroundPane" stylesheets="@Design.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tatai.view.NumberDisplayController">
   <children>
